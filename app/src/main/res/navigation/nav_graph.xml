<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mydailyreminder.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_layout">
        <action
            android:id="@+id/action_homeFragment_to_createReminderFragment"
            app:destination="@id/createReminderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_myRemindersFragment"
            app:destination="@id/myRemindersFragment" />
    </fragment>
    <fragment
        android:id="@+id/createReminderFragment"
        android:name="com.example.mydailyreminder.fragments.CreateReminderFragment"
        android:label="CreateReminderFragment"
        tools:layout="@layout/edit_reminder_layout"/>
    <fragment
        android:id="@+id/myRemindersFragment"
        android:name="com.example.mydailyreminder.fragments.MyRemindersFragment"
        android:label="MyRemindersFragment"
        tools:layout="@layout/reminder_list_item_layout">
        <action
            android:id="@+id/action_myRemindersFragment_to_editReminderFragment"
            app:destination="@id/editReminderFragment" />
    </fragment>
    <fragment
        android:id="@+id/editReminderFragment"
        android:name="com.example.mydailyreminder.fragments.EditReminderFragment"
        android:label="EditReminderFragment" >
        <argument
            android:name="reminder"
            app:argType="com.example.mydailyreminder.data.dataclasses.Reminder" />
    </fragment>
</navigation>